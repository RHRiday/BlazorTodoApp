@page "/todo"
<h3>Todo (@todos.Count(todo => !todo.IsDone))</h3>
<ul>
    @foreach (var todo in todos)
    {
        <li class="form-check w-25">
            <input type="checkbox" @bind="todo.IsDone" class="form-check-input" />
            <input type="text" @bind="todo.Title" class="form-control" />
        </li>
    }
</ul>

<div class="form-group row w-50 justify-content-between">
    <div class="col-8">
        <input type="text" class="form-control" placeholder="Todo title" @bind="newTodo" />
    </div>
    <button type="button" class="btn btn-dark col-3" @onclick="AddTodo">Add Todo</button>
</div>

@code {
    private IList<Blazor_ToDoList.TodoItem> todos = new List<Blazor_ToDoList.TodoItem>();
    private string newTodo;
    private void AddTodo()
    {
        if (!string.IsNullOrEmpty(newTodo))
        {
            todos.Add(new Blazor_ToDoList.TodoItem()
            {
                Title = newTodo
            });
            newTodo = "";
        }
    }
}